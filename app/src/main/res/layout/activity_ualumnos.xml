<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etApellido"
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="369dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="252dp"
        android:ems="10"
        android:hint="Ingresa tu apellido"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />

    <EditText
        android:id="@+id/etEdad"
        android:layout_width="370dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="345dp"
        android:ems="10"
        android:hint="Ingresa tu Edad"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etResidencia"
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="223dp"
        android:ems="10"
        android:hint="Ingresa tu lugar de Residencia"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="454dp"
        android:fontFamily="sans-serif-light"
        android:text="Ingresa tus datos como Alumno"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="600dp"
        android:fontFamily="sans-serif-black"
        android:text="Â¡BIENVENIDO!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bEnviar"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="197dp"
        android:layout_height="42dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="603dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="16dp"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="374dp"
        android:ems="10"
        android:hint="Ingresa tu Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="162dp"
        android:layout_height="149dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="510dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/bseleccionarImagen"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="188dp"
        android:layout_height="59dp"
        android:layout_marginStart="198dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="559dp"
        android:background="#1DAACD"
        android:text="Seleccionar Imagen"
        app:icon="@drawable/baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

